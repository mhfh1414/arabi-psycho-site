# ملف الاختبارات النفسية - tests_psych.py
# يحتوي على دوال لاختبار نفسي بسيط وحساب الدرجة

def score_test(answers: list[int]) -> int:
    """
    يحسب مجموع النقاط من إجابات العميل (قائمة أرقام)
    """
    return sum(answers)


def psych_info(score: int) -> str:
    """
    يعطي وصف لحالة العميل بناءً على مجموع النقاط
    """
    if score >= 80:
        return "ممتاز: حالتك النفسية مستقرة وجيدة جدًا."
    elif score >= 50:
        return "متوسط: تحتاج بعض التمارين والاسترخاء للحفاظ على توازنك النفسي."
    else:
        return "منخفض: يفضل استشارة أخصائي نفسي لمتابعة حالتك بشكل أفضل."
